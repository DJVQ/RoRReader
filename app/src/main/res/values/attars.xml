<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Search_View">
        <attr name="textSizeSearch" format="dimension"  />
        <attr name="textColorSearch" format="color" />
        <attr name="textHintSearch" format="string" />
        <attr name="searchBlockHeight" format="integer" />
        <attr name="searchBlockColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="layout_refresh_empty" format="reference"/>
        <attr name="layout_refresh_error" format="reference"/>
        <attr name="layout_refresh_loading" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RefreshProgressBar">
        <attr name="max_progress" format="integer"/>
        <attr name="dur_progress" format="integer"/>
        <attr name="second_dur_progress" format="dimension"/>
        <attr name="second_max_progress" format="dimension"/>
        <attr name="bg_color" format="color"/>
        <attr name="second_color" format="color"/>
        <attr name="font_color" format="color"/>
        <attr name="speed" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircleCheckbox">
        <attr name="showOuterCircle" format="boolean" />

        <attr name="tickColor" format="string"/>
        <attr name="outerCircleColor" format="string"/>
        <attr name="innerCircleColor" format="string"/>
        <attr name="textColor" format="string"/>
        <attr name="circleBorderColor" format="string"/>

        <attr name="outerCircleRadius" format="dimension"/>
        <attr name="innerCircleRadius" format="dimension"/>
        <attr name="textSize" format="dimension"/>
        <attr name="borderThickness" format="dimension"/>
        <attr name="tickThickness" format="dimension"/>

        <attr name="textLeftPadding" format="dimension"/>
        <attr name="text" format="string"/>
    </declare-styleable>

    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean"/>
        <attr name="ios" format="boolean"/>
        <attr name="leftSwipe" format="boolean"/>
    </declare-styleable>
</resources>