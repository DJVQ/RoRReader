<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MAppTheme" parent="Theme.MyReadProject8">
    </style>

    <!-- Customize your theme here. -->
    <!-- Base application theme. -->
    <style name="Theme.MyReadProject8" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
        <item name="android:itemTextAppearance">@style/MenuItemTextStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="actionBarStyle">@style/AppTheme.AppBarOverlay.Dark</item>
    </style>
    <!-- Customize your theme here. -->


    <style name="NoPaddingToolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/background_menu</item>
    </style>

    <style name="MenuItemTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/menu_color_default</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>


    <style name="AppTheme.AppBarOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="toolbar_title_textStyle">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="toolbar_subtitle_textStyle">
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textColor">@color/md_dark_secondary</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="SingleLine">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="File_Tag">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


    <!--BookDetail-->
    <style name="BottomNavigationViewTheme" />

    <style name="BottomNavigation" />
    <style name="BottomNavigation.GroupView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:elevation">4dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BottomNavigation.ItemView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BottomNavigation.ItemView.Icon" parent="">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="BottomNavigation.ItemView.Title" parent="">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- TextAppearance:修改 -->
    <style name="MAppTheme.TextAppearance" />

    <!--ReadActivity-->
    <style name="MAppTheme.TextAppearance.Read" />

    <style name="MAppTheme.TextAppearance.Read.TopMenu">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/read_menu_text</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>
    <style name="MAppTheme.TextAppearance.Read.BottomMenu">
        <item name="android:textColor">@drawable/setting_btn_bg_color</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>



    <style name="AppTheme.TextAppearance.Read.BottomMenu.Button" parent="MAppTheme.TextAppearance.Read.BottomMenu">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/setting_btn_bg_color</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>




</resources>